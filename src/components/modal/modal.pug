mixin modal(withService)
    .order-modal
        .order-modal__title Студент 
        form.order-modal-form
            if withService
                .form__field
                    label.form__label(for="product") Услуга
                    select#product.form__input(name='product')
                        option(value='') Выберите услугу
                        option(value='student') Студент
                        option(value='professional') Профессионал
                        option(value='scientist') Учёный
            .form__field
                label.form__label(for="email") Email
                input#email.form__input(type="email" name="email" placeholder="email@gmail.com")
            .form__field
                label.form__label(for="phone") Номер телефона
                input#phone.form__input(type="tel" name="phone" placeholder="+7 (999) 999-99-99")
            .form__submit-button
                +button('Приобрести', 'secondary', 'card__button')


